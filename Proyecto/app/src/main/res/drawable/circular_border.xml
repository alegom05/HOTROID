<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Borde exterior -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#2196F3" />
        </shape>
    </item>
    <!-- Fondo interior (ligeramente más pequeño para crear el efecto de borde) -->
    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>