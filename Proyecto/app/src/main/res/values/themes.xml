<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Tema vacío pero válido que hereda de AppCompat -->
    <style name="Theme.Hotroid" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorPrimaryVariant</item>
    </style>


    <style name="Theme.Hotroid.User" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/verdejade</item>
        <item name="colorPrimaryVariant">@color/verdejade</item> <!-- Para compatibilidad -->
        <item name="colorSecondary">@color/verdejade</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="colorOnBackground">#CDCCD1</item>
        <item name="switchStyle">@style/CustomSwitchStyle</item>

        <!-- Agrega también estos si usas Material 3 -->
        <item name="colorPrimaryContainer">@color/verdejade</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>


    <!-- CardView estilo claro -->
    <style name="CardView.Light.style" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/material_dynamic_tertiary50</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

</resources>
